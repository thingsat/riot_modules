CFLAGS += -DCHIRPSTACK_MESH_SIGNING_KEY=$(CHIRPSTACK_MESH_SIGNING_KEY)
CFLAGS += -DCHIRPSTACK_MESH_MAX_HOP=$(CHIRPSTACK_MESH_MAX_HOP)
CFLAGS += -DCHIRPSTACK_MESH_CHANNELS=$(CHIRPSTACK_MESH_CHANNELS)
